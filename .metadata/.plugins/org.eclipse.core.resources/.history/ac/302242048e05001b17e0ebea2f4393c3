package recusionANDbacktracking;

public class SubsetUsingRecursion {

	public static void main(String[] args) {
		
		String str="abc";
		
		Subsets(str,str.length(),0);
		
		
	}

	private static void Subsets(String str, int length, int i) {
		
		if(i>=length-1) {
			return;
		}
		
		String s="";
		for(int p=i;p<length;p++) {
			s+=str.charAt(p);
		}
		System.out.println(s);
		
		Subsets(s,length,i+1);
		
		s="";
		for(int p=i+1;p<length;p++) {
			s+=str.charAt(p);
		}
		Subsets(s,length,i+1);
		
		
	}

}
