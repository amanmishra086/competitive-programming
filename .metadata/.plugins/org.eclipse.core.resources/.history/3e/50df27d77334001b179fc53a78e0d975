//		System.out.println(ans);
		
	}

	private static int upper_bound(int n, int[] coins) {
		
		   int s=0;
		   int e=coins.length-1;
		   
		   while(s<e) {
			   int mid=(s+e)/2;
			   
			   if(coins[mid]==n) {
				   return mid;
			   }else if(coins[mid]<n) {
				   s=mid+1;
				   
			   }else {
				   e=mid-1;
			   }
	   
		   }
		
		
		return s;
	}

}
